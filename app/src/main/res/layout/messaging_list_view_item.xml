<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_item_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp">

    <Space
        android:id="@+id/left_space"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_weight="0" />

    <LinearLayout
        android:id="@+id/message_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_background_me"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:fontFamily="sans-serif"
            android:minWidth="100dp"
            android:textColor="@android:color/primary_text_light_nodisable"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/date_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_msg_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="2dp"
                android:gravity="end"
                android:minWidth="80dp"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/image_is_sent"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="8dp"
                android:contentDescription="@string/isSentImageDescription"
                android:minWidth="24dp"
                android:minHeight="24dp"
                android:padding="2dp"
                app:srcCompat="@android:color/transparent"
                tools:srcCompat="@drawable/ic_check_24px" />

        </LinearLayout>

    </LinearLayout>

    <Space
        android:id="@+id/rigth_space"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_weight="0" />

</LinearLayout>